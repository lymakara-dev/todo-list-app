<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task Title</th> <!-- Update based on correct attribute -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title || task.description %></td> <!-- Use the correct attribute -->
        <td>
          <%= link_to "Show", task %> |
          <%= link_to "Edit", edit_task_path(task) %> |
          <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path %>
